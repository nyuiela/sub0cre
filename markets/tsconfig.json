{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["main.ts", "types/**/*.ts", "lib/**/*.ts", "workflows/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
